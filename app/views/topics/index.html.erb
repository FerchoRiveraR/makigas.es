<% content_for :hero do %>
  <h1>Temáticas</h1>
<% end %>

<div class="text-right">
  <%= link_to 'Nueva temática', new_topic_path, class: 'btn btn-success' %>
</div>

<div class="topics-list row">
<% @topics.each do |tp| %>
<div class="topic col-xs-6 col-sm-4">
<div class="panel panel-default">
  <%= link_to image_tag(tp.photo.url(:medium)), tp %>
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to tp.title, tp %></h3>
  </div>
  <div class="hidden-xs panel-body">
    <p><%= tp.description %></p>
  </div>
</div>
</div>
<% end %>
</div>
