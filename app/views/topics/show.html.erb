<style>
/* Override default page colors with my own. */
.main-header, .hero-tron { background: <%= @topic.color %>; }
.main-header .navbar-makigas { background: rgba(0, 0, 0, 0.25); }
</style>

<% content_for :hero do %>
  <div class="media playlist-data">
    <div class="media-body media-middle">
      <h1 class="playlist-title"><%= @topic.title %></h1>
      <p class="playlist-description"><%= @topic.description %></p>
    </div>
    <div class="media-right media-middle hidden-xs">
      <%= image_tag @topic.thumbnail.url(:small), srcset: "#{@topic.thumbnail.url(:default)} 2x" %>
    </div>
  </div>
<% end %>

<div class="row">
<div class="col-md-8 col-md-offset-2">
  <div class="episodes-table list-group">
  <% @topic.playlists.each do |p| %>
    <%= link_to playlist_path(p), class: 'list-group-item' do %>
      <div class="media">
        <div class="media-left media-middle hidden-xs">
          <%= image_tag "#{p.thumbnail.url(:small)}", srcset: "#{p.thumbnail.url(:default)} 2x" %>
        </div>
        <div class="media-body media-middle">
          <h4 class="list-group-item-heading">
            <%= p.title %>
            <span class="small">&bull; <%= t('.videos', count: p.videos.length) %></span>
          </h4>
          <p class="list-group-item-text"><%= p.description %></p>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
</div>