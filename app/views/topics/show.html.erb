<% content_for :hero do %>
  <h1><%= @topic.title %></h1>
  <p><%= @topic.description %></p>
<% end %>

<div class="buttons-bar">
  <div class="pull-left">
  <%= link_to 'Agregar listas', insert_topic_path(@topic), class: 'btn btn-success' %>
  </div>

  <div class="pull-right">
  <%= link_to 'Editar tema', edit_topic_path(@topic), class: 'btn btn-default' %>
  <%= button_to 'Borrar tema', topic_path(@topic), method: :delete, class: 'btn btn-danger', data: { confirm: 'Esto borrará para siempre la temática.' } %>
  </div>
</div>

<div class="row">
<div class="col-md-8 col-md-offset-2">
  <div class="episodes-table list-group">
  <% @topic.playlists.each do |p| %>
    <%= link_to playlist_path(p), class: 'list-group-item' do %>
      <div class="media">
        <div class="media-left hidden-xs">
          <%= image_tag p.photo.url(:thumbnail), srcset: "#{p.photo.url(:thumbnail_hdpi)} 2x" %>
        </div>
        <div class="media-body">
          <h4 class="list-group-item-heading">
            <%= p.title %>
            <span class="small">&bull; <%= pluralize(p.videos.length, 'video', plural: 'videos') %></span>
          </h4>
          <p class="list-group-item-text"><%= p.description %></p>
        </div>
      </div>
      <div class="list-group-buttons">
        <div class="pull-right">
          <%= button_to 'Eliminar lista', release_topic_path(@topic, playlist: p.id), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Esto liberará esta lista de este tema. ' } %>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
</div>