<% content_for :hero do %>
  <h1><%= t('.title') %></h1>
<% end %>

<%= form_tag insert_topic_path(@topic), class: 'form-horizontal' do %>

<fieldset>
    <legend><%= t('.insert_playlist') %></legend>

    <div class="form-group row">
      <%= label_tag 'topic', t('.topic'), class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <p class="form-control-static"><%= @topic.title %></p>
      </div>
    </div>

    <div class="form-group row">
      <%= label_tag 'playlist', t('.playlist'), class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
      <%= select_tag 'playlist',
          options_from_collection_for_select(@playlists, :id, :title),
          { class: 'form-control' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-4">
        <%= button_tag t('.insert'), class: 'btn btn-success' %>
      </div>

<% end %>