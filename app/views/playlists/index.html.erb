<% content_for :hero do %>
  <h1>Todas las listas de reproducci√≥n</h1>
<% end %>

<div class="buttons-bar">
<div class="text-right">
  <%= link_to 'Nueva lista', new_playlist_path, class: 'btn btn-success' %>
</div>
</div>

<div class="grid-table row">
<% @playlists.each do |pl| %>
<div class="col-xs-6 col-sm-4 col-lg-3">
<%= link_to pl do %>
<div class="playlist panel panel-default">
  <span class="badge"><%= pluralize(pl.videos.count, 'episodio', plural: 'episodios') %></span>
  <%= image_tag pl.photo.url(:md), srcset: "#{pl.photo.url(:hd)} 2x" %>
  <div class="panel-heading">
    <h3 class="panel-title"><%= pl.title %></h3>
  </div>
</div>
<% end %>
</div>
<% end %>
</div>
