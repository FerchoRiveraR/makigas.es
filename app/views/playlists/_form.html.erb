<%= horizontal_form_for @playlist do |form| %>
  <%= form.input :title %>
  <%= form.input :description, as: :text %>
  <%= form.input :youtube_id %>
  <%= form.input :photo %>
  <%= content_tag :div, class: 'form-group' do %>
    <%= image_tag @playlist.photo(:md), class: 'col-sm-offset-3 img-thumbnail' %>
  <% end if @playlist.photo.present? %>
  <%= form.button :submit, class: 'btn-primary col-sm-offset-3' %>
<% end %>